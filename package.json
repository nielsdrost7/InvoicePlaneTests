{
  "name": "invoiceplane-tests",
  "version": "1.0.0",
  "description": "Comprehensive Playwright + Jest test suite for InvoicePlane, an open-source invoicing application",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nielsdrost7/InvoicePlaneTests.git"
  },
  "author": "Niels Drost",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nielsdrost7/InvoicePlaneTests/issues"
  },
  "homepage": "https://github.com/nielsdrost7/InvoicePlaneTests#readme",
  "keywords": [
    "invoiceplane",
    "testing",
    "playwright",
    "jest",
    "e2e",
    "automation"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:headed": "HEADLESS=false jest --runInBand",
    "test:debug": "HEADLESS=false SLOWMO=500 jest --runInBand --verbose",
    "test:coverage": "jest --runInBand --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --runInBand",
    "test:update": "jest --runInBand --updateSnapshot",
    "test:specific": "jest --runInBand --testNamePattern",
    "test:file": "jest --runInBand --testPathPattern",
    "lint": "eslint tests/ --ext .js",
    "lint:fix": "eslint tests/ --ext .js --fix",
    "format": "prettier --write tests/**/*.js",
    "format:check": "prettier --check tests/**/*.js",
    "pretest": "npm run lint",
    "pretest:ci": "npm run lint && npm run format:check",
    "install:browsers": "npx playwright install chromium",
    "postinstall": "npm run install:browsers",
    "clean": "rimraf coverage/ .nyc_output/ playwright-report/",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.55.0",
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.1.2",
    "jest-playwright-preset": "^4.0.0",
    "playwright": "^1.42.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format:check",
      "pre-push": "npm run test:ci"
    }
  },
  "jest": {
    "preset": "jest-playwright-preset",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "tests/**/*.js",
      "!tests/setup.js",
      "!tests/config.js",
      "!tests/jest.global-*.js",
      "!tests/helpers/**",
      "!tests/fixtures/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "verbose": true,
    "maxWorkers": 1,
    "testTimeout": 60000,
    "globalSetup": "<rootDir>/tests/jest.global-setup.js",
    "globalTeardown": "<rootDir>/tests/jest.global-teardown.js"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "globals": {
      "page": "readonly",
      "browser": "readonly",
      "context": "readonly",
      "jestPlaywright": "readonly"
    },
    "rules": {
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "comma-dangle": ["error", "always-multiline"],
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "no-console": "warn"
    }
  }
}
